{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/*"
            ]
        },
        "target": "es5",
        "strict": true,
        "allowJs": true,
        "module": "es2015",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2018", "dom"]
    },
    "include": [
        "./src/**/*.ts",
        "./types/**/*.d.ts"
    ]
}